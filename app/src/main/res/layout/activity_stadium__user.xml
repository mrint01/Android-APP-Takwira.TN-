<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/pic2"
    android:layout_height="match_parent"
    tools:context=".Stadium_UserActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btn_returnToIndex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_return"
                        android:text="@string/txt_goback"
                        android:textColor="#FFFF"
                        app:icon="@drawable/ic_return"
                        android:onClick="BtnGoBackToDashboad"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        android:orientation="horizontal"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="#792D2D2D"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:id="@+id/txtstadetunis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_stadetunis"
                                android:textSize="25sp"
                                android:textColor="#CBFFFFFF"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"/>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonstadetunis"
                                android:onClick="BtnGoToStadeTunis"
                                android:background="@android:color/transparent"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        android:orientation="horizontal"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="#792D2D2D"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:id="@+id/txtstadeariana"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_stadeariana"
                                android:textSize="25sp"
                                android:textColor="#CBFFFFFF"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"/>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonstadeariana"
                                android:onClick="BtnGoToStadeAriana"
                                android:background="@android:color/transparent"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        android:orientation="horizontal"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="#792D2D2D"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:id="@+id/txtstadebenarous"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_stadebenarous"
                                android:textSize="25sp"
                                android:textColor="#CBFFFFFF"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"/>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonstadebenarous"
                                android:onClick="BtnGoToStadeBenArouss"
                                android:background="@android:color/transparent"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardCornerRadius="15dp"
                        android:orientation="horizontal"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="#792D2D2D"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:id="@+id/txtstademanouba"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_stademanouba"
                                android:textSize="25sp"
                                android:textColor="#CBFFFFFF"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:layout_centerInParent="true"/>

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/buttonstademanouba"
                                android:onClick="BtnGoToStadeManouba"
                                android:background="@android:color/transparent"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
</RelativeLayout>