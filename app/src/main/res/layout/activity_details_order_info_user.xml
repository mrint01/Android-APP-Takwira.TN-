<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details_orderInfo_user">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagestadeshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_camera"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/txt_gotostades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_goback"
        android:textColor="@color/gray"
        android:onClick="TxtGoBackTostadeinfo"
        android:textStyle="normal"
        android:drawableStart="@drawable/ic_return"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lay1"
        android:layout_marginTop="5dp"
        app:drawableLeftCompat="@drawable/ic_update" />
    <LinearLayout
        android:id="@+id/lineone"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/txt_gotostades"
        android:background="#008496"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lineone"
        android:layout_marginTop="20dp" >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_star2"
            android:layout_marginStart="70dp"
            android:contentDescription="TODO" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textviewname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nom_du_propri_taire"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:id="@+id/id_stadename"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textviewname"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/nom_du_propri_taire"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llay1"
        android:layout_marginTop="20dp" >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_phone2"
            android:layout_marginLeft="70dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textviewemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t_l_phone_propri_taire"
                android:textSize="16dp"
                android:textColor="@color/gray"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:id="@+id/id_addresse_stade"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/t_l_phone_propri_taire"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lineone2"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/llay2"
        android:background="#008496"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llay24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/lineone2"
        android:layout_marginTop="20dp" >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_price2"
            android:layout_marginStart="70dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prix_pour_une_personne_stade"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:id="@+id/id_prixstade"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/prix_pour_une_personne_stade"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llay28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/llay24"
        android:layout_marginTop="10dp" >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_nbr_person"
            android:layout_marginStart="70dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_de_personnes"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp" />

            <EditText
                android:id="@+id/id_nbrperson"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llay280"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/llay28">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_date"
            android:layout_marginStart="70dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_d_arriv_e"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp" />
            <EditText
                android:hint="@string/choisissez_la_date_et_l_heure"
                android:id="@+id/date_time_input"
                android:inputType="none"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                tools:ignore="TextFields" />


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llay290"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/llay280" >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_price2"
            android:layout_marginStart="70dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prix_total"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp" />

            <TextView
                android:id="@+id/id_pricetotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/prix_total"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/imgclicked"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:onClick="BtnVerifprice"
            android:background="@drawable/ic_update"
            android:layout_marginStart="0dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llay4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1D2D2D2D"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:onClick="BtnConfirmOrder"
        android:gravity="center">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_confirm"
            android:contentDescription="@string/ffffff" />

        <TextView
            android:id="@+id/textviewlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reserve_maintenant_stade"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="-5dp" />

    </LinearLayout>

</RelativeLayout>